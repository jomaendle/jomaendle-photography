---
import { getLangFromUrl } from '../i18n/utils';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { ViewTransitions } from 'astro:transitions';
import { Toaster } from '@/components/ui/sonner';

import '../styles.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<!doctype html>
<html lang={lang} class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
		<link
			rel="preload"
			href="/fonts/Outfit-Regular.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>

		<link rel="preload" href="/fonts/Outfit-Medium.woff2" as="font" type="font/woff2" crossorigin />

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Astro description" />

		<ViewTransitions />
	</head>
	<body class="flex h-full flex-col">
		<style is:global>
			@font-face {
				font-family: 'Outfit';
				src: url('/fonts/Outfit-Light.woff2') format('woff2');
				font-weight: 300;
				font-style: normal;
				font-display: swap;
			}

			@font-face {
				font-family: 'Outfit';
				src: url('/fonts/Outfit-Regular.woff2') format('woff2');
				font-weight: 400;
				font-style: normal;
				font-display: swap;
			}

			@font-face {
				font-family: 'Outfit';
				src: url('/fonts/Outfit-Medium.woff2') format('woff2');
				font-weight: 600;
				font-style: normal;
				font-display: swap;
			}

			:root {
			}

			html {
				font-family: 'Outfit', sans-serif;
			}

			html,
			body {
				margin: 0;
				padding: 0;
				scrollbar-gutter: stable;
				scroll-behavior: smooth;
			}

			.text-hover {
				@apply text-gray-500 transition-colors hover:text-gray-900;
			}

			.link-hover {
				@apply text-blue-500 transition-colors hover:text-blue-900;
			}

			.card {
				@apply p-4 sm:p-8;
			}

			.layout-title {
				@apply text-xl font-medium sm:text-2xl;
			}

			.secondary-text {
				@apply text-sm font-thin text-gray-600;
			}
		</style>

		<Header />
		<main class="flex-1">
			<slot />
		</main>
		<Footer size="sm" />
		<Toaster client:load />
	</body>
</html>
