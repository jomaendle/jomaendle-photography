---
import {getNavItemLink} from "../i18n/utils";
import {getLangFromUrl, useTranslations} from "../i18n/utils";
import MobileMenu from "./MobileMenu.astro";
import {LINKS} from "../models/nav-item";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<header class="sm:p-8 p-4 flex gap-12 sticky top-0 bg-white z-20">
    <a href="/"
       class="flex sm:flex-col items-center sm:items-start gap-2 sm:gap-0 leading-5 text-center flex-1 text-gray-800">
        <span class="text-lg sm:text-xl whitespace-nowrap uppercase font-medium" style="letter-spacing: 0.1rem">
            Jo Maendle
        </span>
        <span class="uppercase text-lg font-thin leading-4" style="letter-spacing: 0.03rem">
            Photography
        </span>
    </a>

    <nav class="hidden sm:flex gap-3">
        {LINKS.map(link => (
                <a href={getNavItemLink(lang, link)} class="py-1 text-hover flex items-center">
                    {t(link.labelKey)}
                </a>
        ))}
    </nav>

    <MobileMenu links={LINKS}/>
</header>
