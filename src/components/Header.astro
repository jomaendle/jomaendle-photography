---
type NavItems = {
    name: string;
    url: string;
    children?: NavItems[];
}

const links: NavItems[] = [
    {
        name: 'Overview',
        url: '/'
    },
    {
        name: 'Work',
        url: '/portfolio',
        children: [{
            name: 'Portraits',
            url: '/portfolio/portraits'
        },
        {
            name: 'Landscapes',
            url: '/portfolio/landscapes'
        }]
    },
    {
        name: 'Featured',
        url: '/journal'
    },
    {
        name: 'About',
        url: '/about'
    },
    {
        name: 'Contact',
        url: '/contact'
    }
]
---

<header class="py-8 px-16 flex flex-col gap-8">
    <a href="/" class="flex flex-col leading-5">
        <span class="text-2xl font-light whitespace-nowrap" style="letter-spacing: 0.12rem">
            Jo Maendle
        </span>
        <span class="uppercase text-lg font-bold" style="letter-spacing: 0.03rem">
            Photography
        </span>
    </a>

    <nav class="flex flex-col gap-4">
        {links.map(link => (
            link.children ? (
                    <details>{link.name}</details>

            ) : (
                    <a href={link.url} class="text-gray-500 hover:text-gray-900">
                        {link.name}
                    </a>
            )
        ))}
    </nav>
</header>
