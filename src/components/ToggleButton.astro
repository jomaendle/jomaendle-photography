---
interface Props {
	title: string;
	isActive: boolean;
}

const { title, isActive }: Props = Astro.props;

const classList = [
	'px-4',
	'py-1.5',
	'rounded-full',
	'transition-colors',
	isActive ? 'bg-gray-800 hover:bg-gray-900 text-white' : 'bg-gray-100 hover:bg-gray-200'
].join(' ');
---

<button class={classList}>
	{title}
</button>
