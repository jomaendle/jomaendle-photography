---
import { ArrowRight } from 'lucide-react';
import { Button } from './button';
import LazyLoadedImage from './LazyLoadedImage.astro';
import ImageHover from '../ImageHover.astro';

const { project } = Astro.props;
---

<style>
	.fade-in-animation {
		animation: fade-in 0.3s ease;
	}

	@keyframes fade-in {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}
</style>

<div class="group relative flex h-full w-full gap-4 overflow-hidden">
	<LazyLoadedImage id={`${project.slug}`} image={project.data.titleImage} />

	<ImageHover label={project.data.title} />
</div>
