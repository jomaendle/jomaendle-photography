---
import {getLangFromUrl, useTranslations} from "../../i18n/utils";
import {getCollection} from "astro:content";

import Layout from "../../layouts/Layout.astro";
import LayoutCard from "../../components/LayoutCard.astro";
import PhotoGrid from "../../components/PhotoGrid.astro";

const images = await getCollection('landscapes');
/*const duplicated = images.concat(images);*/

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title="Portrait Photography by Jo Maendle">
    <LayoutCard title={t('nav.nature')}
                subtitle={t('nature.subtitle')}>

        <PhotoGrid images={images}/>
    </LayoutCard>
</Layout>
