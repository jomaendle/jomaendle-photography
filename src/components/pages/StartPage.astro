---
import {getLangFromUrl, useTranslations} from "../../i18n/utils";
import {getCollection} from "astro:content";
import Layout from '../../layouts/Layout.astro';
import LayoutCard from "../../components/LayoutCard.astro";
import {ImageCarousel} from "../../components/ImageCarousel";
import CtaButton from "../CtaButton.astro";

const images = await getCollection('portrait-images');

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

console.log(images);
---

<Layout title="Jo Maendle Photography">
    <LayoutCard>

        <div class="flex flex-col-reverse md:grid grid-cols-2 gap-12 md:gap-16 lg:gap-20 xl:gap-24 w-full h-full relative px-12 overflow-hidden">
            <ImageCarousel client:load images={images}/>

            <div class="flex flex-col md:justify-center items-center md:items-start text-center md:text-start">
                <h1 class="text-3xl md:text-5xl lg:text-6xl font-bold mb-8 md:mb-4 max-w-[420px]">{t('start.hero.title')}</h1>
                <p class="text-gray-600">{t('start.hero.subtitle')}</p>
                <p class="text-gray-600">{t('start.hero.cta')}</p>

                <div class="flex mt-8 gap-3">
                    <a target="_blank" href="https://calendly.com/jo-maendle/erstgespraech">
                        <CtaButton/>
                    </a>

                    <CtaButton labelKey="common.learnMore" variation="outline"/>
                </div>
            </div>
        </div>

    </LayoutCard>
</Layout>
