---
import { EyeIcon, DownloadIcon, ImageIcon, UsersIcon } from 'lucide-react';
import { UnsplashData } from './unsplash-data';

interface Props {
	value: string;
	title: string;
	key: keyof UnsplashData;
}

const { title, value, key } = Astro.props;

const formatter = new Intl.NumberFormat('en', { notation: 'compact' });
---

<div class="flex flex-col gap-2 rounded-xl bg-gray-100 p-6">
	<header class="flex items-center gap-2 text-sm">
		{key === 'downloads' && <DownloadIcon size="16" className="shrink-0" />}
		{key === 'views' && <EyeIcon size="16" className="shrink-0" />}
		{key === 'followers' && <UsersIcon size="16" className="shrink-0" />}
		{key === 'totalPhotos' && <ImageIcon size="16" className="shrink-0" />}

		<span class="overflow-hidden text-ellipsis whitespace-nowrap">{title}</span>
	</header>
	<span class="text-xl font-bold sm:text-2xl">
		{formatter.format(Number(value))}
	</span>
</div>
